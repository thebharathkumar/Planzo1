{
  "name": "@planzo/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "prettier -c \"src/**/*.ts\"",
    "test": "vitest run",
    "migrate": "tsx src/db/cli.ts",
    "migrate:up": "tsx src/db/cli.ts up",
    "migrate:down": "tsx src/db/cli.ts down",
    "seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@planzo/shared": "file:../../packages/shared",
    "@aws-sdk/client-ses": "^3.758.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-http": "^10.5.0",
    "stripe": "^18.4.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.15.5",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
